
import 'package:flutter/material.dart';
void main() {
 runApp(const LayoutDemoApp());
}
class LayoutDemoApp extends StatelessWidget {
 const LayoutDemoApp({super.key});
@override
Widget build(BuildContext context) {
 return MaterialApp(
 debugShowCheckedModeBanner: false,
 home: Scaffold(
 appBar: AppBar(
 title: const Text("Row, Column & Stack Layout Demo"),
 centerTitle: true,
 backgroundColor: Colors.blue,
 ),
 body: SingleChildScrollView(
 child: Column(
 children: [
 // Row Layout
 const Padding(
 padding: EdgeInsets.all(10.0),
 child: Text(
 "Row Widget Layout",
 style: TextStyle(fontSize: 22, fontWeight: FontWeight.bold),
 ),
 ),
 Row(
 mainAxisAlignment: MainAxisAlignment.spaceEvenly,
 children: [
 box(Colors.red, "1"),
 box(Colors.green, "2"),
 box(Colors.blue, "3"),
 ],
 ),
 const Divider(height: 40, thickness: 2),
 // Column Layout
 const Text(
 "Column Widget Layout",
 style: TextStyle(fontSize: 22, fontWeight: FontWeight.bold),
 ),
 Column(
 children: [
 box(Colors.orange, "A"),
 box(Colors.purple, "B"),
 box(Colors.teal, "C"),
 ],
 ),
 const Divider(height: 40, thickness: 2),
 // Stack Layout
 const Text(
 "Stack Widget Layout",
 style: TextStyle(fontSize: 22, fontWeight: FontWeight.bold),
 ),
 Center(
 child: Stack(
 alignment: Alignment.center,
 children: [
 Container(
 width: 200,
 height: 200,
 color: Colors.grey.shade300,
 ),
 Container(
 width: 150,
 height: 150,
 color: Colors.lightBlue,
 ),
 Container(
 width: 80,
 height: 80,
 color: Colors.deepOrange,
 ),
 ],
 ),
 ),
 const SizedBox(height: 30),
 ],
 ),
 ),
 ),
 );
}
// Reusable Box Widget for Row & Column
static Widget box(Color color, String text) {
 return Container(
 width: 70,
 height: 70,
 decoration: BoxDecoration(
 color: color,
 borderRadius: BorderRadius.circular(10),
 ),
 alignment: Alignment.center,
 child: Text(
 text,
 style: const TextStyle(fontSize: 20, color: Colors.white),
 ),
 );
}
